{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
    "types": ["mocha"],
  },
  "baseUrl": "src",
  "include": [
    "src/**/*.ts",
    "src/**/*.graphql",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "_mocks_",
    ".nyc_output"
  ]
}