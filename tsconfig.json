{
  "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "experimentalDecorators": true,
      "outDir": "dist",
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}