generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  ProductId     Int
  Gender        String
  Category      String
  SubCategory   String
  ProductType   String
  Colour        String
  Usage         String
  ProductTitle  String
  ImageURL      String
  UnitPrice     Float?
}

model favouriteProducts {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  ProductId     Int
  Gender        String?
  Category      String?
  SubCategory   String?
  ProductType   String?
  Colour        String?
  Usage         String?
  ProductTitle  String?
  ImageURL      String?
  UnitPrice     Float?
}

model categories {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  Category   String?
}

model filters {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  Title   String?
  Values  String?
}